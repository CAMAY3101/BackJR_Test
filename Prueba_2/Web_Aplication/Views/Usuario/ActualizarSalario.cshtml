@model Web_Aplication.Models.Usuario

<h2>Actualizar Salario</h2>

<form asp-action="ActualizarSalario" method="post">
    <div class="form-group">
        <label for="nuevoSalario">Nuevo Salario:</label>
        <input type="number" class="form-control" id="nuevoSalario" name="nuevoSalario" required>
    </div>
    <input type="hidden" name="id" value="@Model.Id" />
    <button type="submit" class="btn btn-primary">Guardar</button>
</form>
